{
    "properties": {
        "displayName": "Event Grid - Only ADF Trigger Support",
        "policyType": "Custom",
        "policyRule": {
            "if": {
                "allOf" : [
                    {
                        "field" : "type",
                        "contains" : "Microsoft.EventGrid"
                    },
                    {
                        "anyOf" : [
                            {
                                "field" : "type",
                                "notContains": "Microsoft.EventGrid/systemTopics"
                            },
                            {
                                "field": "type",
                                "notContains": "Microsoft.EventGrid/eventSubscriptions"
                            }
                        ]
                    }
                ]
            },
            "then": {
                "effect" : "audit"
            }
        }
    },
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "EventGridADFTrigger",
    "id": "/providers/Microsoft.Authorization/policyDefinitions/EventGridADFTrigger",
    "parameters": {},
    "metadata": {}           
}