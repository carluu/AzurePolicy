{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "eventHubAuthorizationRuleId": {
            "type": "string",
            "defaultValue": ""
        },
        "storageId": {
            "type": "string",
            "defaultValue": ""
        },
        "workspaceId": {
            "type": "string",
            "defaultValue": ""
        },
        "resourceName": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.DBforMySQL/servers/providers/diagnosticSettings",
            "name": "[concat(parameters('resourceName'),'/Microsoft.Insights/MySQLDiagSettings')]",
            "apiVersion": "2017-05-01-preview",
            "properties": {
                "name": "MySQLDiagSettings",
                "storageAccountId": "[if(empty(parameters('storageId')), json('null'), parameters('storageId'))]",
                "eventHubAuthorizationRuleId": "[if(empty(parameters('eventHubAuthorizationRuleId')), json('null'), parameters('eventHubAuthorizationRuleId'))]",
                "workspaceId": "[if(empty(parameters('workspaceId')), json('null'), parameters('workspaceId'))]",
                "logs": [
                    {
                        "category": "MySqlSlowLogs",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": 0,
                            "enabled": false
                        }
                    },
                    {
                        "category": "MySqlAuditLogs",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": 0,
                            "enabled": false
                        }
                    }                                        
                ],
                "metrics": [
                    {
                        "category": "AllMetrics",
                        "enabled": true,
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    }
                ]
            }
        }
    ]
}