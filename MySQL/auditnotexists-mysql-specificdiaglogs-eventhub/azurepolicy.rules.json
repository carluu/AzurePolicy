{
    "if": {
        "field": "type",
        "equals": "Microsoft.DBforMySQL/servers"
    },
    "then": {
        "effect": "AuditIfNotExists",
        "details": {
            "type": "Microsoft.Insights/diagnosticSettings",
            "existenceCondition": {
                "allOf": [
                    {
                        "field": "Microsoft.Insights/diagnosticSettings/eventHubAuthorizationRuleId",
                        "equals": "[parameters('eventHubAuthorizationRuleId')]"
                    },               
                    {
                        "field": "Microsoft.Insights/diagnosticSettings/logs[*].category",
                        "in": "[parameters('logTypes')]"
                    },                  
                    {
                        "field": "Microsoft.Insights/diagnosticSettings/metrics[*].category",
                        "in": "[parameters('metricTypes')]"
                    },
                    {
                        "value": "[length(field('Microsoft.Insights/diagnosticSettings/logs[*]'))]",
                        "equals": "[string(length(parameters('logTypes')))]"
                    }, 
                    {
                        "value": "[length(field('Microsoft.Insights/diagnosticSettings/metrics[*]'))]",
                        "equals": "[string(length(parameters('metricTypes')))]"
                    }                   
                ]
            }
        }
    }
}