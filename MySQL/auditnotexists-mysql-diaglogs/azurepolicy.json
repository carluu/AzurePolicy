{
    "properties": {
      "displayName": "Audit MySQL Diagnostic Settings",
      "mode": "All",
      "description": "This policy audits that diagnostic settings have been enabled on a MySQL server",
      "paramaters" : {},
      "policyRule": {
        "if": {
          "field": "type",
          "equals": "Microsoft.DBforMySQL/servers"
        },
        "then": {
          "effect": "AuditIfNotExists",
          "details": {
            "type": "Microsoft.Insights/diagnosticSettings",
            "existenceCondition": {
              "allOf": [
                {
                  "field": "Microsoft.Insights/diagnosticSettings/logs.enabled",
                  "equals": "true"
                }
              ]
            }
          }
        }
      }
    }
  }